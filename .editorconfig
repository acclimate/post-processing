# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{py}]
charset = utf-8
indent_style = space
indent_size = 4

# Set default charset
[*.yml]
indent_style = space
indent_size = 2

# Tab indentation
[Makefile]
indent_style = tab
